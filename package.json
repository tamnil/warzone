{
    "name": "warzone",
    "description": "Warzone tests and develpment template",
    "version": "0.0.1",
    "contributors": [
        "Tamnil Saito Junior <tamnil@gmail.com>"
    ],
    "repository": {
        "type": "git",
        "url": "http://github.com/tamnil/warzone.git"
    },
    "scripts": {
        "lint": "node_modules/.bin/jshint ./test/* *.js --config ./.jshintrc",
        "test": "node_modules/.bin/mocha test/*.*.js",
        "build": "",
        "coverage": "",
        "test-unit": "mocha ./test/br/*.*.js",
        "watch-test": " npm-watch test",
        "watch-lint": " npm-watch lint"
    },
    "watch": {
        "test": {
            "patterns": [
                "**"
            ],
            "extensions": "js,jsx,json,ts",
            "ignore": "node_modules/**",
            "quiet": true,
            "legacyWatch": true,
            "delay": 500,
            "runOnChangeOnly": false
        },
        "lint": {
            "patterns": [
                "**"
            ],
            "extensions": "js,jsx,json,ts",
            "ignore": "node_modules/**",
            "quiet": true,
            "legacyWatch": true,
            "delay": 500,
            "runOnChangeOnly": false
        }
    },
    "devDependencies": {
        "chai": "^4.3.0",
        "gulp": "^4.0.2",
        "jshint": "2.12.0",
        "mocha": "^8.2.1",
        "npm-watch": "^0.7.0",
        "sinon": "^9.2.4"
    },
    "license": "MIT",
    "main": "index.js"
}
